# print(*[a1 + (i - 1) * d for i in range(1, n + 1)])


a1 = int(input("Введите первое число : "))  # a
d = int(input("Введите разность: "))               # d
n = int(input("Введите количество элементов: "))             # n

for i in range(n): 
    print(a1+i*d, end=' ')
